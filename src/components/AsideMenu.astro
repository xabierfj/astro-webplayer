---
import HomeIcon from "@/icons/HomeIcon.astro";
import LibraryIcon from "@/icons/Library.astro";
import ExploreIcon from "@/icons/Explore.astro";
import SideMenuItem from "./SideMenuItem.astro";
---

<nav class="flex flex-col flex-1 gap-2">
  <div>
    <div class="p-4 text-2xl font-bold text-white">
      Music Player
    </div>
    <ul class="text-white">
      <SideMenuItem href="/">
        <HomeIcon/>
        Home
      </SideMenuItem>
      <SideMenuItem href="/#">
        <ExploreIcon />
        Explore
      </SideMenuItem>
      <SideMenuItem href="/#">
        <LibraryIcon />
        Library
      </SideMenuItem>
    </ul>
    <div class="border-[1px] border-zinc-500 m-6 w-[200px]"></div>
    <div class="flex flex-col items-center justify-center">
      <button class="rounded-lg bg-zinc-500 p-4 text-white hover:bg-zinc-600 transition duration-300"></button>
    </div>
  </div>
</nav>
