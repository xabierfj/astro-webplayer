---
import "./src/styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div id="app" class="relative h-screen p-2 gap-2">
      <aside class="[grid-area:aside] flex-col flex overflow-y-auto"></aside>
      <main  class="[grid-area:main] rounded-lg bg-zinc-900 overflow-y-auto w-full">
        <slot />
      </main>
      <footer>
				<div class="[grid-area:album]"></div>
				<div class="[grid-area:player]"></div>
			</footer>
    </div>
    <style>
      #app {
        display: grid;
        grid-template-areas:
          "aside main"
					"album main"
          "album player";
        grid-template-columns: 350px 1fr;
        grid-template-rows: 1fr auto;
      }
    </style>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
